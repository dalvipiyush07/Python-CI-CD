pipeline {
    agent any

    environment {
        SSH_CRED = 'node-app-key'
        SERVER_IP = '3.110.168.120'
        REMOTE_USER = 'ubuntu'
        APP_DIR = '/home/ubuntu/pythonapp'
        PORT = '8888'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/dalvipiyush07/Python-CI-CD.git',
                credentialsId: "${SSH_CRED}"
            }
        }

        stage('Verify Files') {
            steps {
                sh '''
                    echo "üìÅ Checking project files..."
                    ls -la
                    echo "üîç Checking for requirement files..."
                    if [ -f "requirements.txt" ]; then
                        echo "‚úÖ Found requirements.txt"
                    else
                        echo "‚ùå No requirements.txt found!"
                        exit 1
                    fi
                    echo "‚úÖ Files verified"
                '''
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                        echo "üöÄ Starting deployment to ${SERVER_IP}"
                        
                        # Create application directory
                        ssh -o StrictHostKeyChecking=no -o ConnectTimeout=30 ${REMOTE_USER}@${SERVER_IP} "mkdir -p ${APP_DIR}"
                        
                        # Copy application files
                        echo "üì¶ Copying application files..."
                        scp -o StrictHostKeyChecking=no -o ConnectTimeout=30 app.py requirements.txt ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                        
                        echo "‚úÖ Files copied successfully"
                    """
                }
            }
        }

        stage('Setup Environment') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no -o ConnectTimeout=30 ${REMOTE_USER}@${SERVER_IP} '
                            echo "üêç Setting up Python environment..."
                            
                            cd ${APP_DIR}
                            
                            # Create virtual environment
                            python3 -m venv venv
                            source venv/bin/activate
                            
                            # Install dependencies
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            
                            echo "‚úÖ Environment setup completed"
                        '
                    """
                }
            }
        }

        stage('Stop Existing App') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        # Use a simpler approach with timeout
                        timeout 30 ssh -o StrictHostKeyChecking=no -o ConnectTimeout=10 ${REMOTE_USER}@${SERVER_IP} '
                            echo "üõë Stopping existing application..."
                            
                            # Kill any Python app processes
                            sudo pkill -f "python3.*app.py" || true
                            sleep 2
                            
                            # Force kill if still running
                            sudo pkill -9 -f "python3.*app.py" || true
                            
                            echo "‚úÖ Cleanup completed"
                        ' || echo "‚ö†Ô∏è SSH command completed (may have been killed)"
                    """
                }
            }
        }

        stage('Start Application') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no -o ConnectTimeout=30 ${REMOTE_USER}@${SERVER_IP} '
                            echo "üöÄ Starting Tornado application..."
                            
                            cd ${APP_DIR}
                            source venv/bin/activate
                            
                            # Kill any remaining processes first
                            sudo pkill -f "python3.*app.py" || true
                            sleep 2
                            
                            # Start the application
                            nohup python3 app.py > app.log 2>&1 &
                            
                            # Save PID
                            echo $! > app.pid
                            
                            echo "‚úÖ Application started with PID: $(cat app.pid)"
                            echo "üìù Logs available at: ${APP_DIR}/app.log"
                        '
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        echo "üîç Verifying deployment..."
                        
                        # Wait for app to start
                        sleep 15
                        
                        ssh -o StrictHostKeyChecking=no -o ConnectTimeout=30 ${REMOTE_USER}@${SERVER_IP} '
                            cd ${APP_DIR}
                            
                            echo "üìä Deployment Verification:"
                            echo "=========================="
                            
                            # Check if process is running
                            if ps -p $(cat app.pid 2>/dev/null) > /dev/null 2>&1; then
                                echo "‚úÖ Process is running (PID: $(cat app.pid))"
                            else
                                echo "‚ùå Process is not running"
                                echo "=== Checking all Python processes ==="
                                ps aux | grep python3 | grep -v grep || echo "No Python processes found"
                                echo "=== Application Logs ==="
                                tail -50 app.log || echo "No logs available"
                                exit 1
                            fi
                            
                            # Check application logs for success message
                            if tail -10 app.log | grep -q "Tornado running on"; then
                                echo "‚úÖ Tornado startup confirmed in logs"
                            else
                                echo "‚ùå Tornado startup not found in logs"
                                echo "=== Last 20 lines of log ==="
                                tail -20 app.log
                                exit 1
                            fi
                            
                            # Test health endpoint with retry
                            for i in {1..5}; do
                                if curl -f -s http://localhost:${PORT}/api/health > /dev/null; then
                                    echo "‚úÖ Health check passed (attempt $i)"
                                    break
                                else
                                    echo "‚ö†Ô∏è Health check attempt $i failed, retrying..."
                                    sleep 3
                                fi
                            done
            
                            if curl -f -s http://localhost:${PORT}/api/health; then
                                echo "‚úÖ Health endpoint is working"
                            else
                                echo "‚ùå Health endpoint failed after retries"
                                exit 1
                            fi
                            
                            echo "üéâ All verification tests passed!"
                        '
                    """
                }
            }
        }

        stage('Final Checks') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no -o ConnectTimeout=30 ${REMOTE_USER}@${SERVER_IP} '
                            echo "üìã Final application status:"
                            echo "==========================="
                            echo "üåê Application URL: http://${SERVER_IP}:${PORT}"
                            echo "üîß Health check: http://${SERVER_IP}:${PORT}/api/health"
                            
                            # Show process info
                            echo "üñ•Ô∏è  Process info:"
                            ps -p $(cat ${APP_DIR}/app.pid 2>/dev/null) || echo "Process not found"
                            
                            # Show port info
                            echo "üîå Port info:"
                            netstat -tlnp | grep :${PORT} || echo "Port ${PORT} not listening"
                            
                            # Show recent logs
                            echo "üìù Recent logs:"
                            tail -5 ${APP_DIR}/app.log || echo "No logs available"
                        '
                    """
                }
            }
        }
    }

    post {
        always {
            echo "üì¶ Build completed: ${currentBuild.result}"
        }
        success {
            echo "üéâ Deployment completed successfully!"
            sh """
                echo "üåê Your application is now live at: http://${SERVER_IP}:${PORT}"
                echo "üí¨ Features available:"
                echo "   ‚Ä¢ Home page: http://${SERVER_IP}:${PORT}/"
                echo "   ‚Ä¢ Contact form: http://${SERVER_IP}:${PORT}/contact"
                echo "   ‚Ä¢ Live chat: http://${SERVER_IP}:${PORT}/chat"
                echo "   ‚Ä¢ Health API: http://${SERVER_IP}:${PORT}/api/health"
                echo "   ‚Ä¢ Submissions: http://${SERVER_IP}:${PORT}/submissions"
            """
        }
        failure {
            echo "‚ùå Deployment failed! Check the logs above for details."
            // Attempt cleanup on failure
            sshagent(["${SSH_CRED}"]) {
                sh """
                    ssh -o StrictHostKeyChecking=no -o ConnectTimeout=10 ${REMOTE_USER}@${SERVER_IP} '
                        echo "üßπ Cleaning up after failed deployment..."
                        sudo pkill -f "python3.*app.py" || true
                        echo "‚úÖ Cleanup completed"
                    ' || echo "‚ö†Ô∏è Cleanup SSH failed, continuing..."
                """
            }
        }
        unstable {
            echo "‚ö†Ô∏è Deployment completed with warnings"
        }
    }
}