pipeline {
    agent any

    environment {
        SSH_CRED = 'node-app-key'
        SERVER_IP = '3.110.168.120'
        REMOTE_USER = 'ubuntu'
        APP_DIR = '/home/ubuntu/pythonapp'
        PORT = '8888'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', 
                url: 'https://github.com/dalvipiyush07/Python-CI-CD.git',
                credentialsId: "${SSH_CRED}"
            }
        }

        stage('Verify Files') {
            steps {
                sh '''
                    echo "üìÅ Checking project files..."
                    ls -la
                    echo "üîç Checking for requirement files..."
                    # Check both possible filenames
                    if [ -f "requirements.txt" ]; then
                        echo "‚úÖ Found requirements.txt"
                    elif [ -f "requirement.txt" ]; then
                        echo "‚úÖ Found requirement.txt - copying to requirements.txt"
                        cp requirement.txt requirements.txt
                    else
                        echo "‚ùå No requirements file found!"
                        exit 1
                    fi
                    echo "‚úÖ Files verified"
                '''
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh """
                        echo "üöÄ Starting deployment to ${SERVER_IP}"
                        
                        # Create application directory
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "mkdir -p ${APP_DIR}"
                        
                        # Copy application files - handle both requirement filenames
                        if [ -f "requirements.txt" ]; then
                            echo "üì¶ Copying requirements.txt"
                            scp -o StrictHostKeyChecking=no app.py requirements.txt ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                        else
                            echo "üì¶ Copying requirement.txt as requirements.txt"
                            scp -o StrictHostKeyChecking=no app.py ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                            scp -o StrictHostKeyChecking=no requirement.txt ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/requirements.txt
                        fi
                        
                        echo "‚úÖ Files copied successfully"
                    """
                }
            }
        }

        stage('Setup Environment') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            echo "üêç Setting up Python environment..."
                            
                            cd ${APP_DIR}
                            
                            # Update system and install Python
                            sudo apt update -y
                            sudo apt install -y python3 python3-pip python3-venv
                            
                            # Create virtual environment
                            python3 -m venv venv
                            source venv/bin/activate
                            
                            # Install dependencies
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            
                            echo "‚úÖ Environment setup completed"
                        '
                    """
                }
            }
        }

        stage('Stop Existing App') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            echo "üõë Stopping existing application..."
                            
                            # Find and kill existing Tornado processes
                            pkill -f "python3 app.py" || true
                            sleep 3
                            
                            # Double check and force kill if needed
                            pgrep -f "python3 app.py" && pkill -9 -f "python3 app.py" || true
                            
                            echo "‚úÖ Existing app stopped"
                        '
                    """
                }
            }
        }

        stage('Start Application') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            echo "üöÄ Starting Tornado application..."
                            
                            cd ${APP_DIR}
                            source venv/bin/activate
                            
                            # Start the application in background
                            nohup python3 app.py > app.log 2>&1 &
                            
                            echo "‚úÖ Application started in background"
                            echo "üìù Logs available at: ${APP_DIR}/app.log"
                        '
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        echo "üîç Verifying deployment..."
                        
                        # Wait for app to start
                        sleep 10
                        
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            cd ${APP_DIR}
                            
                            echo "üìä Deployment Verification:"
                            echo "=========================="
                            
                            # Check if process is running
                            if pgrep -f "python3 app.py" > /dev/null; then
                                echo "‚úÖ Process is running"
                            else
                                echo "‚ùå Process is not running"
                                echo "=== Application Logs ==="
                                cat app.log || echo "No logs available"
                                exit 1
                            fi
                            
                            # Check application logs for success message
                            if grep -q "Tornado running on" app.log; then
                                echo "‚úÖ Application started successfully"
                            else
                                echo "‚ùå Application startup not confirmed"
                                echo "=== Last 20 lines of log ==="
                                tail -20 app.log
                                exit 1
                            fi
                            
                            # Test health endpoint
                            if curl -f -s http://localhost:${PORT}/api/health > /dev/null; then
                                echo "‚úÖ Health check passed"
                            else
                                echo "‚ùå Health check failed"
                                exit 1
                            fi
                            
                            # Test main page
                            if curl -f -s http://localhost:${PORT}/ > /dev/null; then
                                echo "‚úÖ Main page is accessible"
                            else
                                echo "‚ùå Main page is not accessible"
                                exit 1
                            fi
                            
                            echo "üéâ All verification tests passed!"
                        '
                    """
                }
            }
        }

        stage('Final Checks') {
            steps {
                sshagent(["${SSH_CRED}"]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            echo "üìã Final application status:"
                            echo "==========================="
                            ps aux | grep "python3 app.py" | grep -v grep
                            echo ""
                            echo "üåê Application URL: http://${SERVER_IP}:${PORT}"
                            echo "üîß Health check: http://${SERVER_IP}:${PORT}/api/health"
                            netstat -tlnp | grep :${PORT} || echo "Port ${PORT} not found (may be starting)"
                        '
                    """
                }
            }
        }
    }

    post {
        always {
            echo "üì¶ Build completed: ${currentBuild.result}"
        }
        success {
            echo "üéâ Deployment completed successfully!"
            sh """
                echo "üåê Your application is now live at: http://${SERVER_IP}:${PORT}"
                echo "üí¨ Features available:"
                echo "   ‚Ä¢ Home page: http://${SERVER_IP}:${PORT}/"
                echo "   ‚Ä¢ Contact form: http://${SERVER_IP}:${PORT}/contact"
                echo "   ‚Ä¢ Live chat: http://${SERVER_IP}:${PORT}/chat"
                echo "   ‚Ä¢ Health API: http://${SERVER_IP}:${PORT}/api/health"
                echo "   ‚Ä¢ Submissions: http://${SERVER_IP}:${PORT}/submissions"
            """
        }
        failure {
            echo "‚ùå Deployment failed! Check the logs above for details."
        }
        unstable {
            echo "‚ö†Ô∏è Deployment completed with warnings"
        }
    }
}